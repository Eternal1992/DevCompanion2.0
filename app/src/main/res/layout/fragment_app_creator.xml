<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Name Input -->
        <EditText
            android:id="@+id/editAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="App Name"
            android:inputType="textCapWords" />

        <!-- App Idea Summary -->
        <EditText
            android:id="@+id/editAppIdea"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Describe the app idea..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginTop="12dp" />

        <!-- Generate App Button -->
        <Button
            android:id="@+id/btnGenerateApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate App Files"
            android:layout_marginTop="20dp" />

        <!-- Build APK Button -->
        <Button
            android:id="@+id/btnBuildApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build APK"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>